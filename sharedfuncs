#!/bin/bash
# Shared functions

prompt() {
    message="$1\033[0m\n"
    case $2 in
        green) message="\033[1;32m$message" ;;
        yellow) message="\033[1;33m$message" ;;
        red) message="\033[1;31m$message" ;;
        blue) message="\033[1;34m$message" ;;
    esac
    printf "$message"
}
